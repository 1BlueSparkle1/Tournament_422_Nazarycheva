<Page x:Class="Tournament_422_Nazarycheva.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_422_Nazarycheva.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="161*"/>
        </Grid.ColumnDefinitions>

        <Frame Grid.Column="1" x:Name="ViewerFrame" NavigationUIVisibility="Hidden"></Frame>

        <StackPanel>
            <Button x:Name="FutureBtn" Click="FutureBtn_Click">Будущие</Button>
            <Button x:Name="NowBtn" Click="NowBtn_Click">Идущие</Button>
            <Button x:Name="LastBtn" Click="LastBtn_Click">Прошедшие</Button>
            <Button x:Name="ExitBtn" Click="ExitBtn_Click">Выйти</Button>
        </StackPanel>
    </Grid>
</Page>
