<Page x:Class="Tournament_422_Nazarycheva.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_422_Nazarycheva.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Никнейм:</TextBlock>
            <TextBox x:Name="NicknameTb"></TextBox>
            <TextBlock>Телефон:</TextBlock>
            <TextBox x:Name="PhoneTb" MaxLength="11"></TextBox>
            <TextBlock>Роль:</TextBlock>
            <ComboBox x:Name="RoleCb"></ComboBox>
            <TextBlock>Регион:</TextBlock>
            <ComboBox x:Name="RegionCb"></ComboBox>
            <TextBlock>Логин:</TextBlock>
            <TextBox x:Name="LoginTb"></TextBox>
            <TextBlock>Пароль:</TextBlock>
            <TextBox x:Name="PasswordTb"></TextBox>
            <Button x:Name="RegBtn" Click="RegBtn_Click">Зарегистрироваться</Button>
            <Button x:Name="EnterBtn" Click="EnterBtn_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
