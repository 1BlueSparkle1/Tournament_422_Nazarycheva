<Page x:Class="Tournament_422_Nazarycheva.Pages.HomePlayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_422_Nazarycheva.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePlayerPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="319*"/>
        </Grid.ColumnDefinitions>

        <Frame Grid.Column="1" Name="PlayerFrame" NavigationUIVisibility="Hidden">
            
        </Frame>

        <StackPanel>
            <Button x:Name="ProfileBtn" Click="ProfileBtn_Click">Профиль</Button>
            <Button x:Name="TournamentBtn" Click="TournamentBtn_Click">Турниры</Button>
            <Button x:Name="ExitBtn" Click="ExitBtn_Click">Выйти</Button>
        </StackPanel>
    </Grid>
</Page>
