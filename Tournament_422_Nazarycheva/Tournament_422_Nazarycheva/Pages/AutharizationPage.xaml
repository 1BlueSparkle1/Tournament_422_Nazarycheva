<Page x:Class="Tournament_422_Nazarycheva.Pages.AutharizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_422_Nazarycheva.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutharizationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Логин:</TextBlock>
            <TextBox x:Name="loginTb"></TextBox>
            <TextBlock>Пароль:</TextBlock>
            <TextBox x:Name="PasswordTb"></TextBox>
            <Button x:Name="EnterBtn" Click="EnterBtn_Click">Войти</Button>
            <Button x:Name="RegistrationPlayerBtn" Click="RegistrationPlayerBtn_Click">Зарегистрироваться как игрок</Button>
            <Button x:Name="RegistrationOrganizerBtn" Click="RegistrationOrganizerBtn_Click">Зарегистрироваться как организатор</Button>
            <Button x:Name="ViewerBtn" Click="ViewerBtn_Click">Войти как зритель</Button>
        </StackPanel>
    </Grid>
</Page>
